{
    $schema: '../../sdk/v1/schema.json',

    ttl: 30,
    sizes: ['full', 'large', 'small'],

    name: 'BitcoinStats',
    description: 'Show local Bitcoin node stats served by BTC-RPC-Explorer API.',
    assets: {
        icon: 'static/icon.svg',
        previews: {
            full: 'static/full.png',
            large: 'static/large.png',
            medium: 'static/small.png',
            small_left: 'static/small.png',
            small_right: 'static/small.png',            
        },
    },

    prefs: ['theme'],
    params: {
        url: {
            name: 'URL',
            description: 'Local address of BTC-RPC-Explorer API (http://ip:port)',
            type: 'string',
            default: 'http://host.docker.internal:8081/btc-rpc-explorer/',
        },
    },
}
