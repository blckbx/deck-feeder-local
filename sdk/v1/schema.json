{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Widget Metadata",
    "description": "Metadata configuration for deck-feeder widgets",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "description": "JSON Schema reference"
        },
        "ttl": {
            "type": "integer",
            "description": "Cache TTL in seconds (how long to cache rendered images). Set to 0 to disable caching.",
            "minimum": 0,
            "default": 60
        },
        "sizes": {
            "type": "array",
            "description": "Supported widget sizes",
            "items": {
                "type": "string",
                "enum": ["small", "medium", "large", "full"]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "name": {
            "type": "string",
            "description": "Human-readable widget name"
        },
        "description": {
            "type": "string",
            "description": "Widget description"
        },
        "assets": {
            "type": "object",
            "description": "Widget asset declarations (icon + static previews)",
            "required": ["icon", "previews"],
            "additionalProperties": false,
            "properties": {
                "icon": {
                    "type": "string",
                    "description": "Relative path to the widget icon (e.g. static/icon.svg)"
                },
                "previews": {
                    "type": "object",
                    "description": "Static preview image paths for every supported gallery size",
                    "required": ["full", "large", "medium", "small_left", "small_right"],
                    "additionalProperties": false,
                    "properties": {
                        "full": { "type": "string" },
                        "large": { "type": "string" },
                        "medium": { "type": "string" },
                        "small_left": { "type": "string" },
                        "small_right": { "type": "string" }
                    }
                }
            }
        },
        "params": {
            "type": "object",
            "description": "Widget parameters (JSON Schema for each parameter)",
            "additionalProperties": {
                "oneOf": [
                    {
                        "type": "object",
                        "description": "String parameter",
                        "required": ["type", "name"],
                        "additionalProperties": false,
                        "properties": {
                            "type": { "const": "string" },
                            "name": { "type": "string" },
                            "description": { "type": "string" },
                            "default": { "type": "string" },
                            "enum": {
                                "oneOf": [
                                    { "type": "array", "items": { "type": "string" }, "minItems": 1 },
                                    {
                                        "type": "object",
                                        "additionalProperties": { "type": "string" },
                                        "minProperties": 1
                                    }
                                ]
                            },
                            "const": { "type": "string" },
                            "format": {
                                "type": "string",
                                "enum": [
                                    "date-time",
                                    "date",
                                    "time",
                                    "email",
                                    "hostname",
                                    "ipv4",
                                    "ipv6",
                                    "uri",
                                    "uuid"
                                ]
                            },
                            "pattern": { "type": "string" },
                            "minLength": { "type": "integer", "minimum": 0 },
                            "maxLength": { "type": "integer", "minimum": 0 }
                        }
                    },
                    {
                        "type": "object",
                        "description": "Number parameter",
                        "required": ["type", "name"],
                        "additionalProperties": false,
                        "properties": {
                            "type": { "const": "number" },
                            "name": { "type": "string" },
                            "description": { "type": "string" },
                            "default": { "type": "number" },
                            "enum": {
                                "oneOf": [
                                    { "type": "array", "items": { "type": "number" }, "minItems": 1 },
                                    {
                                        "type": "object",
                                        "additionalProperties": { "type": "string" },
                                        "minProperties": 1
                                    }
                                ]
                            },
                            "const": { "type": "number" },
                            "minimum": { "type": "number" },
                            "maximum": { "type": "number" },
                            "exclusiveMinimum": { "type": "number" },
                            "exclusiveMaximum": { "type": "number" },
                            "multipleOf": { "type": "number", "exclusiveMinimum": 0 }
                        }
                    },
                    {
                        "type": "object",
                        "description": "Integer parameter",
                        "required": ["type", "name"],
                        "additionalProperties": false,
                        "properties": {
                            "type": { "const": "integer" },
                            "name": { "type": "string" },
                            "description": { "type": "string" },
                            "default": { "type": "integer" },
                            "enum": {
                                "oneOf": [
                                    { "type": "array", "items": { "type": "integer" }, "minItems": 1 },
                                    {
                                        "type": "object",
                                        "additionalProperties": { "type": "string" },
                                        "minProperties": 1
                                    }
                                ]
                            },
                            "const": { "type": "integer" },
                            "minimum": { "type": "number" },
                            "maximum": { "type": "number" },
                            "exclusiveMinimum": { "type": "number" },
                            "exclusiveMaximum": { "type": "number" },
                            "multipleOf": { "type": "number", "exclusiveMinimum": 0 }
                        }
                    },
                    {
                        "type": "object",
                        "description": "Boolean parameter",
                        "required": ["type", "name"],
                        "additionalProperties": false,
                        "properties": {
                            "type": { "const": "boolean" },
                            "name": { "type": "string" },
                            "description": { "type": "string" },
                            "default": { "type": "boolean" },
                            "const": { "type": "boolean" }
                        }
                    },
                    {
                        "type": "object",
                        "description": "Array parameter",
                        "required": ["type", "items", "name"],
                        "additionalProperties": false,
                        "properties": {
                            "type": { "const": "array" },
                            "name": { "type": "string" },
                            "description": { "type": "string" },
                            "items": {
                                "type": "object",
                                "required": ["type"],
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": ["string", "number", "integer", "boolean"]
                                    },
                                    "enum": {
                                        "type": "array",
                                        "minItems": 1
                                    },
                                    "const": {},
                                    "minimum": { "type": "number" },
                                    "maximum": { "type": "number" },
                                    "exclusiveMinimum": { "type": "number" },
                                    "exclusiveMaximum": { "type": "number" },
                                    "multipleOf": { "type": "number", "exclusiveMinimum": 0 },
                                    "minLength": { "type": "integer", "minimum": 0 },
                                    "maxLength": { "type": "integer", "minimum": 0 },
                                    "pattern": { "type": "string" },
                                    "format": {
                                        "type": "string",
                                        "enum": [
                                            "date-time",
                                            "date",
                                            "time",
                                            "email",
                                            "hostname",
                                            "ipv4",
                                            "ipv6",
                                            "uri",
                                            "uuid"
                                        ]
                                    }
                                }
                            },
                            "default": { "type": "array" },
                            "minItems": { "type": "integer", "minimum": 0 },
                            "maxItems": { "type": "integer", "minimum": 0 },
                            "uniqueItems": { "type": "boolean" }
                        }
                    }
                ]
            }
        },
        "prefs": {
            "type": "array",
            "description": "Array of common parameter keys from prefs.json5",
            "items": {
                "type": "string",
                "enum": ["theme", "timezone", "numberFormat", "timeFormat", "dateFormat", "temperatureUnit"]
            },
            "uniqueItems": true
        }
    },
    "required": ["ttl", "sizes", "name", "assets", "description", "params"]
}
